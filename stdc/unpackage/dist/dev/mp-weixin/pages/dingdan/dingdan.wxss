
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100vw;
	height: 100vh;
	background-color: #F0F0F0;
}
.order {
	width: 80%;
	height: 26%;
	background-color: #E3EDCD;
	margin-top: 15px;
	padding: 0 20px;
	border-radius: 15px;
}
.head {
	border-bottom: 2px solid black;
	height: 30px;
}
.foot {
	border-top: 2px solid black;
	height: 30px;
	margin-top: 15px;
}
.load-button {
	width: 18%;
	height: 80%;
	box-sizing: border-box;
	float: left;
	margin-top: 2%;
	margin-left: 1%;
	border: 1px solid black;
	display: flex;
	justify-content: center;
	align-items: center;
}

