
.content {

	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100vw;
	height: 93vh;
	background-color: #F0F0F0;
}
.inputWrapper {
	width: 70%;
	height: 80rpx;
	background: white;
	border-radius: 20px;
	box-sizing: border-box;
	padding: 0 20px;
	margin-top: 25px;
}
.inputWrapper .input {
	width: 100%;
	height: 100%;
	text-align: left;
	font-size: 15px;
}
.load-button {
	width: 40%;
	height: 80rpx;
	box-sizing: border-box;
	margin-top: 15px;
}
.button {
	width: 100%;
	height: 80rpx;
	border-radius: 20px;
	box-sizing: border-box;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 25px;
}

