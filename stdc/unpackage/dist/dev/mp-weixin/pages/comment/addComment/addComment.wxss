
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100vw;
	height: 100vh;
	background-color: #F0F0F0;
}
.head {
	width: 90%;
	height: 10%;
	background: white;
	border-radius: 5px;
	margin-top: 10px;
}
.head_left {
	float: left;
	margin-top: 5%;
	margin-left: 5%;
}
.head_right {
	margin-top: 5%;
	margin-left: 5%;
	float: left;
}
.comment {
	width: 90%;
	height: 60vh;
	background: white;
	border-radius: 5px;
	box-sizing: border-box;
	padding: 0 20px;
	margin-top: 25px;
}
.load-button {
	width: 70%;
	height: 80rpx;
	box-sizing: border-box;
	padding: 0 20px;
	margin-top: 15px;
}
.button {
	width: 100%;
	height: 80rpx;
	border-radius: 20px;
	box-sizing: border-box;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 25px;
}

